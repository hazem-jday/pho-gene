<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PhoGene" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color2</item>
        <item name="colorPrimaryVariant">@color/color2</item>
        <item name="colorOnPrimary">@color/colorFG</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color2</item>
        <item name="colorSecondaryVariant">@color/color2</item>
        <item name="colorOnSecondary">@color/colorBG</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>



    <style name="Theme.PhoGene.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.PhoGene.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PhoGene.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>